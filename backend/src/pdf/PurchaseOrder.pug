      //-   font-size: 10px;
      //- }
      .left{
        float:left;
      }
      .right{
        float:right;
      }
      .top-area {    
        display: block;
        width:100%;
        height: 12.5%;
        position: relative;
        padding: 10px 15px;
        box-sizing: border-box;
      }
      alignRight :{
        text-align: right !important;
      }
      alignLeft :{
        text-align: left;
      }
      .logo {
        width: 250px;
        position: absolute;
        left: 15px;
        top: 10px;
      }
      .title-area {
        position: absolute;
        right: 15px;
        top: 10px;
        text-align: right;
        width: 45%;
      }
      h1.invoice{
        font-size:28px;
        color:#52008c;
        margin-top:0;
        margin-bottom: 10px;
      }
      p.strong{
        font-weight:700;
      }
      
      .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        width: 100%;
      }
      .info-column {
        flex: 1;
        padding: 10px;
        text-align: left;
      }
      .info-column.company {
        flex: 1.5;
      }
      .info-column.bill-to {
        flex: 1.5;
      }
      .info-column h3 {
        color: #52008c;
        margin-top: 0;
        margin-bottom: 10px;
        font-size: 14px;
        font-weight: bold;
      }
      .info-column p {
        margin: 5px 0;
        font-size: 12px;
      }

      .tableHeader{
        color:#52008c;
      }
      .clearfix {
        display: block; }
      .col {
