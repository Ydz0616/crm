doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet {
        margin: 0;
        width: 100%; 
        height: 297mm
      }

      body{
        width: 100%; 
        margin: 0;
        padding: 0px ;
        background: #ffffff;
        font-family: 'Noto Sans CJK SC', 'Noto Sans CJK', sans-serif;
        font-size:12px;
        color:#222
      }
      *, *:before, *:after {
        box-sizing: inherit;
        color:#222;
        font-family: 'Noto Sans CJK SC', 'Noto Sans CJK', sans-serif;
      }
      :lang(zh) {
        font-family: 'Noto Sans CJK SC', 'Noto Sans CJK', sans-serif !important;
      }
      .clearfix {
        display: block; }
